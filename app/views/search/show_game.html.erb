<div class="container">
	<div class="pure-g">
		<!-- <h1> Search results for <%= @search %> </h1> -->
		<% @games.each do |x| %>
			<div class="pure-u-11-24">
				<div class="pure-u-11-24">
					<img class='pure-img' id="game_img" src='<%= x["image"]["small_url"] %>'>
				</div>
				<div class="pure-u-11-24">
					<h3> Release date: <%= x["expected_release_month"] %>/<%= x["expected_release_day"] %>/<%= x["expected_release_year"] %></h3>
				</div>
				<div class="pure-u-1-1">
					<h1> Title: <%= x["name"] %> </h1>
					<p> Description: <%= x["deck"] %> </p>
				</div>
			</div>
				<form action='/search/gameresults' method='POST'>
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
					<input type='hidden' name='title' value='<%= x["name"] %>'>
					<input type='hidden' name='description' value='<%= x["deck"] %>'>
					<input type='hidden' name='date' value='<%= x["expected_release_month"] %>/<%= x["expected_release_day"] %>/<%= x["expected_release_year"] %>'>
					<input type='hidden' name='pic' value='<%= x["image"]["small_url"] %>'>
					<input type='hidden' name='unique_id' value='<%= x["id"]%>'>
					<button>add</button>
				</form>
				<br><br><br>

			<% end %>
	</div>
</div>		