                <input type='text' name='name' placeholder='Enter game name'>
                <button class="pure-button pure-button-primary">Search</button>
                </form>
            </div>
            <div class="pure-u-1-1">
                <img id="mario" src="http://static.planetminecraft.com/files/resource_media/screenshot/1236/mario_3501733.jpg">
                <img id="megaman" src="http://piq.codeus.net/static/media/userpics/piq_120715_400x400.png"> 
                <img class="fireball_invis" src="https://lh5.ggpht.com/Lrozt-howCiaHiWIdAuBhIiKBLVXTvjecpIPLqQfRMRGTkx-C3j0ventLSVgVluvoKKY=w300">
